{
  "name": "@tobenot/basic-web-game-backend-contract",
  "version": "1.1.4",
  "description": "",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "prisma:generate:schema": "node scripts/generate-prisma-schema.js",
    "prisma:generate:client": "npx prisma generate",
    "dev": "npx dotenv -e .env -- npm run prisma:generate:schema && ts-node-dev --inspect --respawn --transpile-only src/server.ts",
    "build": "dotenv -e .env -- node scripts/generate-prisma-schema.js && npx prisma generate && tsc && node scripts/copy-templates.js",
    "migrate:dev": "npx dotenv -e .env -- npm run prisma:generate:schema && npx prisma migrate dev",
    "migrate:prod": "npx dotenv -e .env.publish -- npm run prisma:generate:schema && npx prisma migrate deploy",
    "migrate:deploy": "npx prisma migrate deploy || npx prisma db push",
    "studio": "npx dotenv -e .env -- npm run prisma:generate:schema && npx prisma studio",
    "copy-templates": "node scripts/copy-templates.js",
    "version:patch": "node scripts/update-version.js patch",
    "version:minor": "node scripts/update-version.js minor",
    "version:major": "node scripts/update-version.js major",
    "get-next-version": "node scripts/get-next-version.js",
    "template:update": "bash scripts/update-from-template.sh",
    "template:apply": "APPLY=1 bash scripts/update-from-template.sh",
    "template:apply:blocks": "APPLY=1 BLOCKS_ONLY=1 bash scripts/update-from-template.sh",
    "hooks:install": "bash scripts/install-git-hooks.sh",
    "test": "echo \"Error: no test specified\" && exit 1",
    "vercel-build": "npm run build",
    "vercel:build": "node scripts/generate-prisma-schema.js && npx prisma generate",
    "pack:win": "node scripts/pack.js win full",
    "pack:win:server": "node scripts/pack.js win server",
    "pack:win:modules": "node scripts/pack.js win modules",
    "pack:linux": "node scripts/pack.js linux full",
    "pack:linux:server": "node scripts/pack.js linux server",
    "pack:linux:modules": "node scripts/pack.js linux modules",
    "pack:all": "node scripts/pack.js all full",
    "db:up": "docker compose -f docker-compose.postgres.yml up -d",
    "db:down": "docker compose -f docker-compose.postgres.yml down",
    "env:pg:local": "export DATABASE_URL=postgres://dev:dev@localhost:5432/app?sslmode=disable",
    "prisma:pg:gen": "dotenv -e .env -- node scripts/generate-prisma-schema.js && npx prisma generate",
    "migrate:pg:dev": "DATABASE_URL=postgres://dev:dev@localhost:5432/app npx prisma migrate dev",
    "migrate:pg:reset": "DATABASE_URL=postgres://dev:dev@localhost:5432/app npx prisma migrate reset --force",
    "migrate:pg:reinit": "sh -lc 'rm -rf prisma/migrations && export DATABASE_URL=postgres://dev:dev@localhost:5432/app; node scripts/generate-prisma-schema.js; npx prisma generate; npx prisma migrate dev --name init'",
    "studio:pg": "DATABASE_URL=postgres://dev:dev@localhost:5432/app npx prisma studio",
    "dev:pg": "sh -lc 'export DATABASE_URL=postgres://dev:dev@localhost:5432/app; node scripts/generate-prisma-schema.js; npx prisma generate; ts-node-dev --inspect --respawn --transpile-only src/server.ts'"
  },
  "postinstall": "prisma generate",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tobenot/Basic-Web-Game-Backend.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": "22.x"
  },
  "bugs": {
    "url": "https://github.com/tobenot/Basic-Web-Game-Backend/issues"
  },
  "homepage": "https://github.com/tobenot/Basic-Web-Game-Backend#readme",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/static": "^8.2.0",
    "@prisma/client": "^6.15.0",
    "@trpc/server": "^11.4.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@vercel/node": "^5.3.17",
    "dotenv-cli": "^7.4.4",
    "fastify": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "resend": "^3.5.0",
    "typescript": "^5.9.2",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@trpc/server": "^11.4.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "archiver": "^6.0.1",
    "prisma": "^6.15.0",
    "ts-node-dev": "^2.0.0"
  }
}
